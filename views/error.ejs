</body>
<h1>Find Peers</h1>
<h1><%= error %></h1>

<select id="campus-selector" onchange="window.location.href='/'+this.value">
	<option value="no" selected disabled>Select your campus</option>
	<% campuses.forEach(campus=>{ %>
		<option value="<%= campus.name %>"><%= campus.name %></option>
	<% })  %>
</select>

